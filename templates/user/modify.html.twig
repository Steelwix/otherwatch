{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row ">
			<div class="col-12 text-center">
				<h1>Modifier le profil de
					{{users.username}}</h1>
			</div>
			<div class="card col-10 col-md-9 col-lg-6 mx-auto text-center bg-dark"><br>
				{{ form_start(UserForm)}}
				{{ form_row(UserForm.username)}}
				{{ form_row(UserForm.email)}}
				{{ form_row(UserForm.password)}}
				{{ form_row(UserForm.profilePicture)}}
				<button type="submit" class="btn btn-primary btn-lg">Modifier</button><br><br>
				{{ form_end(UserForm)}}
			</div>
		</div>
	</section>
{% endblock %}
