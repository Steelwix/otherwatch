{% extends 'base.html.twig' %}


{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-12 text-center">
				<h1>
					<i>UTILISATEURS</i>
				</h1>
			</div>
			<div class="row">
				{% for user in users %}
					{% if "ROLE_ADMIN" in user.roles %}
						<div class="card bg-danger col-2 mh-500 d-flex align-items-stretch">
						{% else %}
							<div class="card bg-dark col-2 mh-500 d-flex align-items-stretch">
							{% endif %}
							{% if user.profilesPictures.name is defined %}
								<img class="card-img-top rounded" src="{{asset('/uploads/profilePicture/'~ user.profilesPictures.name)}}" alt="Card image cap">
							{% endif %}
							<div class="card-title text-center">
								<p>
									<strong>{{user.username}}</strong>
									{{user.email}}
								</p>

								<div class="card-content text-center"></div>
								<a type="button" class="btn btn-dark" href="{{path('app_modify_user', {id: app.user.id}) }}">
									<i class="bi bi-pen-fill">
										Modifier</i>
								</a>
								<a type="button" class="btn btn-dark" href="{{path('app_delete_user', {id: app.user.id}) }}">
									<i class="bi bi-trash-fill">Supprimer</i>

								</a>
							</div>

						</div>


					{% endfor %}
				</div>
			</div>
		</div>
	{% endblock %}
